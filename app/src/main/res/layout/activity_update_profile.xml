<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gymguide.UpdateProfileActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="8dp"
            android:paddingTop="20dp"
            android:paddingRight="8dp">

            <ImageView
                android:id="@+id/imageViewProfilePictureU"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                tools:src="@drawable/blank_profile"
                android:background="@color/colorPrimary"/>

            <TextView
                android:id="@+id/textViewUserNameU"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:text="@string/profile_userName"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="?android:attr/listDivider" />

            <Button
                android:id="@+id/buttonUploadPhoto"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="end"
                android:layout_marginTop="-40dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="-10dp"
                android:background="@drawable/button_border"
                android:text="@string/profile_u_upload_photo"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewWorkoutGoalLabelU"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:text="@string/profile_workout_goal"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/editTextWorkoutGoal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:hint="@string/profile_u_goal_hint"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/black"
                    android:textColorHint="@color/gray" />
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:id="@+id/textViewWorkoutCategoriesLabelU"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:text="@string/profile_workout_categories"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/checkBoxArms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/cat_0" />

            <CheckBox
                android:id="@+id/checkBoxBack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/cat_1" />

            <CheckBox
                android:id="@+id/checkBoxCardio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/cat_2" />

            <CheckBox
                android:id="@+id/checkBoxCore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/cat_3" />

            <CheckBox
                android:id="@+id/checkBoxLegs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/cat_4" />

            <TextView
                android:id="@+id/textViewWorkoutDifficultyLabelU"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:text="@string/profile_workout_difficulty"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />


            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <RadioButton
                    android:id="@+id/radioButtonDiffE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/difficulty_E" />

                <RadioButton
                    android:id="@+id/radioButtonDiffM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/difficulty_M" />

                <RadioButton
                    android:id="@+id/radioButtonDiffH"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/difficulty_H" />
            </RadioGroup>

            <Button
                android:id="@+id/btnUpdateProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@color/colorPrimary"
                android:text="@string/profile_u_update"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </LinearLayout>
    </ScrollView>


</android.support.constraint.ConstraintLayout>
